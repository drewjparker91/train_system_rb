<h1>CITIES</h1>

<h2>City List</h2>

<% if @cities.any? %>
  <ul>
    <% @cities.each do |city| %>
    <li>
      <a href="/cities/<%= city.id %>"><%= city.name %></a>
    </li>
  <% end %>
  </ul>
<% else %>
  <p>There are no cities listed at this time</p>
<% end %>

<a href="/cities/new">Add a new city</a>
<p><a href="/trains">View train list</a></p>

<form action="/search">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-success">Search!</button>