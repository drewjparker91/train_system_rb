<h1>Edit <%= @train.name %></h1>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="train_name">Edit Trains's Name</label>
  <input id="train_name" name="train_name" type="text">

  <button type="submit">Save Changes</button>
</form>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete train</button>
</form>

<p><a href="/trains">Return to Train List</a></p>
